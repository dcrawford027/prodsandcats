@{
    ViewData["Title"] = "Categories";
}
@model Category

<div class="container pt-5">
    <h1 class="text-center mb-5"><a asp-action="Products">Products</a> | Categories</h1>

    <div class="row">
        <div class="col">
            <h2 class="text-center mb-5">New Category</h2>

            <form asp-action="CreateCategory" method="POST">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info">Create</button>
                </div>
            </form>
        </div>

        <div class="col text-center border-left border-dark">
            <h2 class="text-center">Existing Categories</h2>

            @foreach (Category category in ViewBag.Categories)
            {
                <a asp-action="Category" asp-route-categoryId="@category.CategoryId" class="d-block">@category.Name</a>
            }
        </div>
    </div>
</div>