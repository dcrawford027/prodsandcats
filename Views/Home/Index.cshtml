@{
    ViewData["Title"] = "Category Page";
}
@model Category

<div class="container pt-5">
    <h1 class="text-center mb-5">@Model.Name</h1>

    <div class="row">
        <div class="col">
            <ul>Products:
                @foreach (var association in Model.Products)
                {
                    <li>@association.Product.Name</li>
                }
            </ul>
        </div>

        <div class="col">
            <p>Add Product:</p>
            <form asp-action="AddProductToCategory" asp-route-productId="@Model.CategoryId" method="POST">
                <select name="productId" class="custom-select">
                    @foreach (Product product in @ViewBag.Products)
                    {
                        <option value="@product.ProductId">@product.Name</option>
                    }
                </select>
                <button type="submit" class="btn btn-info mt-5">Add</button>
            </form>
        </div>
    </div>
</div>
